<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    <title>EasyFly.com</title>
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/EasyFlyBootstrap.css" rel="stylesheet" />
    <link href="~/Photos/Logo/R1.png" rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet" href="https://kit-pro.fontawesome.com/releases/v5.12.1/css/pro.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.0/clipboard.min.js"></script>
</head>


<body>

    <div class="md:fixed md:w-full md:top-0 md:z-20 flex flex-row flex-wrap items-center bg-gray-600 p-6 border-b border-gray-300">

        <!-- logo -->
        <div class="flex-none w-56 flex flex-row items-center">
            <!--<img src="~/Photos/Logo/R1.png" class="w-10 flex-none" />-->
            <i class="far fa-paper-plane text-4xl leading-none text-white"></i>

            <a style="font-size:medium;" class="navbar-brand" href="/AdminLogins/AdminDashboard">
                <strong class="capitalize ml-1 mr-6 flex-1 text-gray-100 hover:text-teal-400 transition ease-in-out duration-500">
                    EasyFly
                </strong>
            </a>
            <button id="sliderBtn" class="flex-none text-right text-gray-100 hidden md:block">
                <i class="fad fa-list-ul text-lg"></i>
            </button>

        </div>
        <!-- end logo -->
        <!-- navbar content toggle -->
        <button id="navbarToggle" class="hidden md:block md:fixed right-0 mr-6">
            <i class="fad fa-chevron-double-down text-gray-300"></i>
        </button>
        <!-- end navbar content toggle -->
        <!-- navbar content -->
        <div id="navbar" class="animated md:hidden md:fixed md:top-0 md:w-full md:left-0 md:mt-16 md:border-t md:border-b md:border-gray-200 md:p-10 md:bg-white flex-1 pl-3 flex flex-row flex-wrap justify-between items-center md:flex-col md:items-center">

            <!-- left -->
            <div class="text-gray-100 md:w-full md:flex md:flex-row md:justify-evenly md:pb-10 md:mb-10 md:border-b md:border-gray-200">
            </div>
            <!-- end left -->
            <!-- right -->
            <div class="flex flex-row-reverse items-center">

                <!-- user -->
                <div class="dropdown relative md:static">

                    <button class="menu-btn focus:outline-none focus:shadow-outline flex flex-wrap items-center ">
                        <div class="ml-2 capitalize flex">
                            <h1 class="text-m text-gray-100 font-semibold m-0 p-0 leading-none hover:text-teal-400 transition ease-in-out duration-500">
                                <i class="fas fa-user-shield "></i>  Admin
                            </h1>
                            <i class="fad fa-chevron-down ml-2 text-s leading-none text-white"></i>
                        </div>
                    </button>

                    <div class="text-gray-600 menu md:mt-1 md:w-full rounded bg-gray-100 shadow-md absolute z-20 right-0 w-40 mt-5 py-2 animated faster hidden ">

                        <!-- item -->
                        <a class="px-4 py-2 block capitalize font-medium text-sm tracking-wide hover:bg-gray-600 hover:text-gray-200 transition-all duration-300 ease-in-out" href="@Url.Action("Chat","AdminLogins")">
                            <i class="fad fa-inbox-in text-s mr-1"></i>
                            Support Inbox
                        </a>
                        <!-- end item -->

                        <hr>

                        <!-- item -->
                        <a class="px-4 py-2 block capitalize font-medium text-sm tracking-wide hover:bg-gray-600 hover:text-gray-200 transition-all duration-300 ease-in-out" href="@Url.Action("AdminLogOut","AdminLogins")">
                            <i class="fad fa-user-times text-s mr-1"></i>
                            Log Out
                        </a>
                        <!-- end item -->

                    </div>
                </div>
                <!-- end user -->

            </div>
            <!-- end right -->
        </div>
        <!-- end navbar content -->

    </div>

    <!-- strat wrapper -->
    <div class="h-screen flex flex-row flex-wrap">

        <!-- start sidebar -->
        <div id="sideBar" class="relative flex flex-col flex-wrap bg-gray-900 border-r border-gray-300 p-6 flex-none w-64 md:-ml-64 md:fixed md:top-0 md:z-30 md:h-screen md:shadow-xl animated faster">
            <!-- sidebar content -->
            <div class="flex flex-col">

                <!-- sidebar toggle -->
                <div class="text-right hidden md:block mb-4">
                    <button id="sideBarHideBtn">
                        <i class="fad fa-times-circle text-gray-100 text-lg"></i>
                    </button>
                </div>
                <!-- end sidebar toggle -->


                <p class="uppercase text-2xl text-gray-400 mb-4 tracking-wider">Home</p>


                <!-- link -->
                <a href="/AdminLogins/AdminDashboard" class="mb-5 capitalize font-bold text-xl text-gray-200 hover:text-teal-600 transition ease-in-out duration-500">
                    <i class="fad fa-user-shield text-s mr-2"></i>
                    Admin Dashboard
                </a>
                <!-- end link -->

                <p class="uppercase text-2xl text-gray-400 mb-4 mt-4 tracking-wider">Users</p>

                <!-- link -->
                <a href="/SingleUserLogs/Index" class="mb-3 capitalize font-bold text-xl text-gray-200 hover:text-teal-600 transition ease-in-out duration-500">
                    <i class="fad fa-users text-s mr-2"></i>
                    Single Users
                </a>
                <!-- end link -->
                <!-- link -->
                <a href="/CompanyUserLogs/Index" class="mb-5 capitalize font-bold text-xl text-gray-200 hover:text-teal-600 transition ease-in-out duration-500">
                    <i class="fad fa-university text-s mr-2"></i>
                    Company Users
                </a>
                <!-- end link -->

                <p class="uppercase text-2xl text-gray-400 mb-4 mt-4 tracking-wider">Management</p>

                <!-- link -->
                <a href="/Employees/Index" class="mb-3 capitalize font-bold text-xl text-gray-200 hover:text-teal-600 transition ease-in-out duration-500">
                    <i class="fad fa-user-tie text-s mr-2"></i>
                    Employees
                </a>
                <!-- end link -->
                <!-- link -->
                <a href="/FlightInfoes/Index" class="mb-3 capitalize font-bold text-xl text-gray-200 hover:text-teal-600 transition ease-in-out duration-500">
                    <i class="fad fa-calendar-edit text-s mr-2"></i>
                    Flights
                </a>
                <!-- end link -->
                <!-- link -->
                <a href="/AircraftInfoes/Index" class="mb-3 capitalize font-bold text-xl text-gray-200 hover:text-teal-600 transition ease-in-out duration-500">
                    <i class="fad fa-plane text-s mr-2"></i>
                    Aircrafts
                </a>
                <!-- end link -->
                <!-- link -->
                <a href="/PackageInfoes/Index" class="mb-3 capitalize font-bold text-xl text-gray-200 hover:text-teal-600 transition ease-in-out duration-500">
                    <i class="fad fa-umbrella-beach text-s mr-2"></i>
                    Offers/Packages
                </a>
                <!-- end link -->
                <!-- link -->
                <a href="/HotelInfoes/Index" class="mb-3 capitalize font-bold text-xl text-gray-200 hover:text-teal-600 transition ease-in-out duration-500">
                    <i class="fas fa-hotel text-s mr-2"></i>
                    Hotels
                </a>
                <!-- end link -->                


            </div>
            <!-- end sidebar content -->
        </div>
        <!-- end sidbar -->
        <!-- strat content -->
        <div class="bg-blue-100 flex-1 p-6 md:mt-16">
            @RenderBody()
            <br /><br /><hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - EasyFly.com - All Rights Resereved.</p>
            </footer>
        </div>
        <!-- end content -->
    </div>
    <!-- end wrapper -->




    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/EasyFlyScript.js"></script>
    @RenderSection("scripts", required: false)



</body>
</html>
