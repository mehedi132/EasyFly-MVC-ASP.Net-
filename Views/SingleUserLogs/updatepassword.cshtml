@using EasyFly.Models;
@{
    ViewBag.Title = "updatepassword";
}


<!DOCTYPE html>
<html>
<head>
    <title>Page Title</title>

    <link href="~/Content/userinfo.css" rel="stylesheet" />
</head>
<body>

    <div style="height:200px; background-color:aqua;">
        <h1>Personal Information</h1>
        <p style="color: white; font-size: 20px; word-spacing: 300px ">Name: Address: Email:</p>
        @foreach (var f in ViewBag.d)
        {
            <p style="font-size: 20px; word-spacing: 300px ">@f.FirstName @f.S_ContactNo @f.S_Email</p>
        }
    </div>

    <div>
        <div style=" background-color:forestgreen;">
            <h1>DashBoard</h1>
            
        </div>

        <div style="width:25%; height: 300px; background-color: antiquewhite; float: left; margin-left: 15px ">
            <button class="button"><span>@Html.ActionLink("Update Password", "updatepassword")</span></button>
            <button class="button"><span>@Html.ActionLink("Update User History", "recentPurchase")</span></button>
            <button class="button"><span>@Html.ActionLink("Update User Profile", "UserProfileUpdate")</span></button>
            <button class="button"><span>@Html.ActionLink("Ticket Cancellation", "ticketcancellation")</span></button>
        </div>

        <div style="width:70%; height: 400px; background-color: darkseagreen; float: left; margin-left: 15px ">

            <form action="updatepassword" method="post">
                @{

                        foreach (var f in ViewBag.d)
                        {

                            <div class="form-group">
                                <label>Old Password</label>
                                <input type="text" name="oldpassword" class="form-control form-control-lg">
                            </div>
                            <div class="form-group">
                                <label>New Password</label>
                                <input type="text" name="newpassword" class="form-control">
                            </div>
                        }
                 }

                <button type="submit" class="btn btn-primary">Update</button>

            </form>




        </div>



    </div>


</body>
</html>