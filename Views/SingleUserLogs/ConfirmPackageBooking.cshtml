@{
    ViewBag.Title = "ConfirmPackageBooking";
}
<div class="container justify-content-center">
    <table class="table">
        <tr>
            <td>Name </td>
            <td>@ViewBag.user.FirstName  @ViewBag.user.LastName </td>
        </tr>
        <tr>
            <td>Email </td>
            <td> @ViewBag.user.S_Email </td>
        </tr>
        <tr>
            <td>Package ID </td>
            <td> @ViewBag.packageId </td>
        </tr>
        <tr>
            <td>Check-In </td>
            <td> @ViewBag.checkInDate </td>
        </tr>

        <tr>
            <td>Number of Person </td>
            <td> @ViewBag.noOfPerson </td>
        </tr>

        <tr>
            <td>Total Cost  </td>
            <td> BDT @ViewBag.cost </td>
        </tr>
    </table>
    <h1>@ViewBag.msg</h1>
</div>


